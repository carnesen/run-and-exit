    "jest": "24.9.0",
    "rimraf": "3.0.0",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  },
  "files": [
    "src/index.ts",
    "lib/index.js*",
    "lib/index.d.ts*"
  ],
  "author": {
